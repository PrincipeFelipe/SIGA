{
  "name": "siga-backend",
  "version": "1.0.0",
  "description": "Backend de la Plataforma Interna de Gestión (PIG) - Sistema de Control de Acceso Jerárquico",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:schema": "mariadb -u root -pklandemo siga_db < ../database/schema.sql",
    "db:seed": "mariadb -u root -pklandemo siga_db < ../database/seed.sql",
    "db:reset": "npm run db:schema && npm run db:seed",
    "generate:jwt-secret": "node -e \"console.log('JWT_SECRET=' + require('crypto').randomBytes(64).toString('hex'))\"",
    "generate:passwords": "node scripts/generate-password-hashes.js"
  },
  "keywords": [
    "express",
    "mariadb",
    "jwt",
    "rbac",
    "hierarchical-permissions",
    "authorization"
  ],
  "author": "SIGA Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mariadb": "^3.2.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "morgan": "^1.10.0",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
